{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/index.jsx"]
}
